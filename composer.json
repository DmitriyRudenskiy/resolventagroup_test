{
    "name": "resolventagroup_test",
    "description": "Test work for company Resolventa Group",
    "keywords": [
        "framework",
        "laravel",
        "lumen"
    ],
    "authors": [
        {
            "name": "Dmitriy Rudenskiy",
            "email": "dmitriy.rudenskiy@gmail.com"
        }
    ],
    "license": "MIT",
    "type": "project",
    "require": {
        "php": "^7.2",
        "laravel/lumen-framework": "^6.0",
        "spatie/laravel-google-calendar": "^2.3"
    },
    "require-dev": {
        "fzaninotto/faker": "^1.4",
        "mockery/mockery": "^1.0",
        "phpunit/phpunit": "^8.0",
        "sebastian/phpcpd": "^4.1",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "autoload": {
        "classmap": [
            "database/seeds",
            "database/factories"
        ],
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "classmap": [
            "tests/"
        ]
    },
    "scripts": {
        "phplint": "find . ( -name '*.php') -exec php -lf {};",
        "phpcs": "./vendor/bin/phpcs --colors --report-full --standard=PSR12 app/",
        "phpcpd": "./vendor/bin/phpcpd app/",
        "phpmd": "./vendor/bin/phpmd src/ text cleancode,codesize,controversial,design,naming,unusedcode",
        "test": "./vendor/bin/phpunit --bootstrap vendor/autoload.php --testdox tests",
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ]
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}



